
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Learning content (read-only for authenticated users)
    match /paths/{id} {
      allow read: if request.auth != null;
      allow write: if false; // Prohibit client-side writes
    }

    match /modules/{id} {
      allow read: if request.auth != null;
      allow write: if false; // Prohibit client-side writes
    }

    match /lessons/{id} {
      allow read: if request.auth != null;
      allow write: if false; // Prohibit client-side writes
    }

    // User progress data (only owner can read/write)
    match /user_progress/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Detailed per-lesson progress (only owner can read/write)
    match /lesson_progress/{uid}/lessons/{lessonId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Default deny all other paths
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
