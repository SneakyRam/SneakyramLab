
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== HELPER FUNCTIONS =====
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Admin check: Reads the 'role' field from the user's own profile document.
    // This is cost-effective as it's a single, targeted read.
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ===== USERS =====
    // Users can create their own profile upon signup.
    // They can read and update their own profile.
    // They cannot change their own role.
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId)
                    && request.resource.data.id == userId
                    && request.resource.data.role == 'user'; // Users can only create themselves with 'user' role.
      allow update: if isOwner(userId)
                    && request.resource.data.role == resource.data.role; // Prevent self-role-escalation.
      allow delete: if false; // Users cannot delete their own accounts.
      allow list: if false; // Prevent listing all users.

      // --- User Progress (Sub-collection) ---
      // Users can read and write their own progress records.
      match /progress/{topicId} {
        allow read, write: if isOwner(userId)
                         && request.resource.data.userId == userId;
      }
    }

    // ===== BLOG POSTS =====
    // Published blog posts are public.
    // Only admins can create, update, or delete blog posts.
    match /blog_posts/{blogPostId} {
      allow get, list: if resource.data.isPublished == true;
      // Admins can read non-published posts too for management.
      allow read: if isAdmin(); 
      // TEMPORARILY changed to allow any signed-in user to create posts for seeding.
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // ===== LEARNING (STATIC CONTENT) =====
    // Learning content is public but only manageable by admins.
    // For MVP, these are effectively read-only for non-admins.
    match /learning_modules/{moduleId} {
      allow get, list: if true;
      allow write: if isAdmin();

      match /topics/{topicId} {
        allow get, list: if true;
        allow write: if isAdmin();
      }
    }

    // ===== TOOL USAGE LOGS =====
    // Append-only collection. Signed-in users can log their own actions.
    // No one can read, update, or delete logs to protect privacy and integrity.
    match /tool_usage_logs/{logId} {
        allow read, update, delete: if false;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // ===== DEPRECATED ADMIN ROLES =====
    // This collection is not used in the MVP. Deny all access.
    match /roles_admin/{userId} {
        allow read, write: if false;
    }

  }
}
