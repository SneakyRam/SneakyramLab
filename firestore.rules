
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== HELPER FUNCTIONS =====
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'admin';
    }

    function isNotDeleted() {
      // Deny if status is 'deleted'. Allow if field is missing or different.
      return getUserData(request.auth.uid).status != 'deleted';
    }
    
    function isNotLocked() {
        return getUserData(request.auth.uid).status != 'locked';
    }

    // ===== USERS =====
    match /users/{userId} {
      // An admin can read any profile. A user can read their own if not deleted/locked.
      allow get: if isAdmin() || (isOwner(userId) && isNotDeleted() && isNotLocked());
      
      // A new user can create their own profile.
      // The 'role' must be 'user' and they cannot set a 'status'.
      allow create: if isOwner(userId) 
                    && request.resource.data.role == 'user'
                    && !('status' in request.resource.data);

      // A user can update their displayName, but not their role or status.
      // Admins can update any user's profile (e.g., to change a role or status).
      allow update: if (isOwner(userId) 
                      && request.resource.data.role == resource.data.role
                      && request.resource.data.status == resource.data.status)
                    || isAdmin();
      
      allow list: if isAdmin(); // Only admins can list users.
      allow delete: if false; // Disallow client-side deletes. Use soft-delete pattern.
    }

    // ===== BLOG POSTS =====
    match /blog_posts/{blogPostId} {
      // Public can read published posts.
      allow get, list: if resource.data.isPublished == true;
      // Admins can read any post regardless of publish status.
      allow read: if isAdmin();
      // Only admins can write.
      allow create, update, delete: if isAdmin();
    }
    
    // ===== LEARNING (STATIC CONTENT) =====
    // For the MVP, learning content is fetched via Admin SDK on the server, so client rules are minimal.
    // Allow reads for signed-in users.
    match /paths/{pathId} {
        allow get, list: if isSignedIn();
        allow write: if isAdmin();
    }
    match /learning_modules/{moduleId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
      match /topics/{topicId} {
        allow get, list: if isSignedIn();
        allow write: if isAdmin();
      }
    }

    // ===== USER-SPECIFIC DATA (like progress) =====
    match /users/{userId}/{subcollection}/{docId} {
       // Users can manage their own sub-collection data if not locked/deleted.
       allow read, write: if isOwner(userId) && isNotDeleted() && isNotLocked();
    }
    
    // ===== TOOL USAGE LOGS =====
    match /tool_usage_logs/{logId} {
        // Users cannot read, update, or delete logs.
        allow read, update, delete: if false;
        // Any signed-in user can create a log for themselves, if they are not locked/deleted.
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid && isNotDeleted() && isNotLocked();
    }
  }
}
